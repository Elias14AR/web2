<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles/styles.css">
  <title>Lista de Usuarios</title>
</head>
<body>

  <!-- Galería de imágenes -->
  <div class="imagen-galeria">
    <img src="/images/2mjywu.jpg" alt="Imagen 1">
    <img src="/images/kanye-west.webp" alt="Imagen 2">
    <img src="/images/speed.jpg" alt="Imagen 3">
  </div>

  <h1>Lista de Usuarios</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/edit/<%= user.id %>">Editar</a> |
            <a href="/delete/<%= user.id %>" onclick="return confirm('¿Seguro que quieres eliminar este usuario?');">Eliminar</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <h2>Agregar Usuario</h2>
  <form action="/add" method="post">
    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" maxlength="45" required placeholder="Ingresa el nombre" />
    <br /><br />
    <label for="email">Correo:</label>
    <input type="email" id="email" name="email" maxlength="45" required placeholder="Ingresa el correo" />
    <br /><br />
    <button type="submit">Agregar</button>
  </form>

</body>
</html>
